<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_row_foreground"


    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="401dp"
        android:layout_height="193dp"
        android:background="@color/white"
        android:padding="20dp">


        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="175dp"
            android:layout_height="157dp"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_image" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/profile_image"
            android:fontFamily="@font/bungeeregular"
            android:includeFontPadding="false"
            android:text="Random"
            android:textColor="@color/yellow"
            android:textSize="30sp" />


    </RelativeLayout>

    <Button
        android:id="@+id/profile_btn"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="0dp"
        android:background="#D3A51C"
        android:text="Change profile pic"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:backgroundTint="#FFEB3B" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#FAF6F6"
        android:orientation="vertical"
        android:padding="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"

            android:hint="App Handle"
            android:textColorHint="@color/yellow"
            app:boxBackgroundColor="@color/bg_row_foreground"
            app:boxStrokeColor="#E6DBDB"
            app:hintTextColor="@color/bg_row_foreground">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-black"
                android:text="Random"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="   E-mail"
            android:textColorHint="@color/yellow"
            app:boxBackgroundColor="#FFFFFF">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/khat"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-black"
                android:text="  Admin@randomgmail.com"
                android:textColor="@color/black" />

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:hint=" Phone Number"
            android:textColorHint="@color/yellow"
            app:boxBackgroundColor="#FFFFFF">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/dialer"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif-black"
                android:text=" +91-9990009991"
                android:textColor="@color/black" />


        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:fontFamily="@font/bungeeregular"
            android:text="Update"
            android:textColor="@color/yellow"
            android:textColorHint="@color/yellow"
            android:textSize="25sp" />


    </LinearLayout>


</LinearLayout>